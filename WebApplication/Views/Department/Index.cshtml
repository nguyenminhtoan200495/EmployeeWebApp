@model List<DataAccess.Entities.Department>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<a href="@Url.Action("Create", "Department")" class="btn btn-info" value="CreateNew">Create New</a>
<hr/>
<table class="table table-bordered table-striped">
    <thead>
        <tr class="success color-darkblue">
            <th>NameDepartment</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.NameDepartment</td>
                <td><a href="@Url.Action("Edit", "Department", new {id = @employee.Id})" class="btn btn-info" id="edit" value="Edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                <td><a href="@Url.Action("Delete", "Department", new {id = @employee.Id})" class="btn btn-danger" id="edit" value="Edit"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
            </tr>
        }
    </tbody>
</table>