@model List<DataAccess.Entities.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>

<a href="@Url.Action("Create", "Employee")" class="btn btn-info" value="CreateNew">Create New</a>
<hr />

<table class="table table-bordered table-striped">
    <thead>
        <tr class="success color-darkblue">
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Date Of Birth</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Address</td>
                <td>@employee.Email</td>
                <td>@employee.DateOfBirth</td>
                <td><a href="@Url.Action("Edit", "Employee", new {id = @employee.Id})" class="btn btn-info" id="edit" value="Edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                <td><a href="@Url.Action("Delete", "Employee", new {id = @employee.Id})" class="btn btn-danger" id="edit" value="Edit"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
            </tr>
        }
    </tbody>
</table>

